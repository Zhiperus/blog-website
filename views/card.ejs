<%- include("partials/header.ejs")%>

<% if(locals.blog) {%>
    <div class="grid-item" id="blog-title" >
        <h1 class="roboto-condensed-text"><%= blog.title%></h1>
    </div>
    <div class="grid-item" id="blog-content">
        <h2  style="white-space: pre-wrap" class="rubik-text"><%= blog.content%></h2>
    </div>
    <div>
        <form class="grid-item" method="post" action="/edit/blog/<%= id%>">
            <input id="edit-button" type="submit" value="Edit">
        </form>
        <form class="grid-item" id="delete-form" method="post">
            <button class="delete-button" type="submit" formaction="/blog/<%= id%>">Delete</button>
        </form>
    </div>
    
<% } %>

<%- include("partials/footer.ejs")%>
